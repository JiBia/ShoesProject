    <div class="row">
        <div class="col-xs-12">
            <!-- TAB-BG-PRODUCT-AREA START -->
            <div class="tab-bg-product-area">
                <!-- TAB PANES START -->
                <div class="tab-content bg-tab-content">
                    <!-- TABS ONE START-->
                    @foreach (var btab in ViewBag.lstBrand)
                    {
                        <div role="tabpanel" class="tab-pane @(btab == ViewBag.lstBrandFirst ? "active" : "")" id="@btab.BrandId">
                            <div class="bg-tab-content-area tab-carousel-1">
                                <!-- TAB-SINGLE-ITEM START -->
