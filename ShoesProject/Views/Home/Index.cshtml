                                    }

                                }


                                <!-- TAB-SINGLE-ITEM END -->
                            </div>
                        </div>
                    }

                    <!-- TABS ONE END-->
                </div>
                <!-- TAB PANES END -->
                <!-- TABS MENU START-->
                <div class="tab-carousel-menu">
                    <ul class="nav nav-tabs product-bg-nav">
                        @{
                            foreach (var b in ViewBag.lstBrand)
                            {
                                <li class="@(b == ViewBag.lstBrandFirst ? "active" : "")"><a href="#@b.BrandId" data-toggle="tab">@b.BrandName</a></li>
                            }
                        }
                    </ul>
                </div>
                <!-- TABS MENU END-->
            </div>
            <!-- TAB-BG-PRODUCT-AREA END -->
        </div>
