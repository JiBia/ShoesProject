                                            <div class="single-product-item">
                                                <div class="product-image">
                                                    <a href="@Url.Action("Index","ProductDetail",new { id = @ptab.id })"><img src="~/Admin/Content/ProductImages/@ptab.id/@ptab.imagesFeature" alt="product-image" /></a>
