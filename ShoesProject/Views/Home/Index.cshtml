@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row">
        <!-- MAIN-SLIDER-AREA START -->
        <div class="main-slider-area">
            <!-- SLIDER-AREA START -->
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="slider-area">
                    <div id="wrapper">
                        <div class="slider-wrapper">
                            <div id="mainSlider" class="nivoSlider" style="height:420px">
                                @foreach (var ban in ViewBag.lstBannerProduct)
                                {
                                    <img src="~/Admin/Content/ProductImages/@ban.ProductId/@ban.ProductFeatureImage" alt="main slider" title="#@ban.ProductId" height="100%" />
                                }
                            </div>
                            @foreach (var ban1 in ViewBag.lstBannerProduct)
                            {
                                <div id="@ban1.ProductId" class="nivo-html-caption slider-caption">
                                    <div class="slider-progress"></div>
                                    <div class="slider-cap-text slider-text1">
                                        <div class="d-table-cell">
                                            <h2 class="animated bounceInDown">@ban1.ProductName</h2>
                                            <p class="animated bounceInUp">@ban1.ProductDescription</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- SLIDER-AREA END -->
            <!-- SLIDER-RIGHT START -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="slider-right zoom-img m-top">
                    <a><img class="img-responsive" src="~/Content/img/product/cms11.jpg" alt="sidebar left" /></a>
                </div>
            </div>
            <!-- SLIDER-RIGHT END -->
        </div>
        <!-- MAIN-SLIDER-AREA END -->
    </div>
    <!-- TOW-COLUMN-PRODUCT START -->
    <div class="row tow-column-product">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <!-- SALE-PRODUCTS START -->
            <div class="Sale-Products">
                <div class="left-title-area">
                    <h2 class="left-title">New Products</h2>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <!-- SALE-CAROUSEL START -->
                            <div class="sale-carousel">
                                @foreach (var p in ViewBag.lstNewProducts)
                                {
                                    <div class="item">
                                        <div class="new-product">
                                            <div class="single-product-item">
                                                <div class="product-image">
                                                    <a href="@Url.Action("Index", "ProductDetail",new { id = @p.id })" style="height: 263px"><img src="~/Admin/Content/ProductImages/@p.id/@p.imagesFeature" alt="product-image" height="100%" /></a>
                                                    <a class="new-mark-box">@(p.discount > 0 ? "sale" : "")</a>
                                                </div>
                                                <div class="product-info">
                                                    <div class="customar-comments-box">
                                                        <div class="review-box">
                                                            @if (p.discount > 0)
                                                            {
                                                                <span>@p.discount %</span>
                                                            }
                                                        </div>
                                                    </div>
                                                    <a href="@Url.Action("Index", "ProductDetail")">@p.name</a>
                                                    <div class="price-box">
                                                        <span class="price">
                                                            @if (p.discount > 0)
                                                            {
                                                                @String.Format("{0:0,0 vnđ}", (p.price - (p.price * p.discount) / 100))
                                                            }
                                                            else
                                                            {
                                                                @String.Format("{0:0,0 vnđ}", p.price)
                                                            }
                                                        </span>
                                                        @if(p.discount > 0) {
                                                            <span class="old-price">@String.Format("{0:0,0 vnđ}", p.price)</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <!-- SALE-CAROUSEL END -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- SALE-PRODUCTS END -->
        </div>
        
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <!-- SALE-PRODUCTS START -->
            <div class="Sale-Products">
                <div class="left-title-area">
