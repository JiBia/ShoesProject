                                            <a href="@Url.Action("Index","ProductDetail",new { id = item.Product.ProductId})"><img src="~/Content/img/@item.Product.ProductImages" alt="shopping image" /></a>
                                        </div>
                                        <div class="shipping-item-text">
                                            <span>@item.Quantity<span class="pro-quan-x">x</span> <a href="#" class="pro-cat">@item.Product.ProductName</a></span>
                                            <span class="pro-quality"><a href="#">@item.Product.Sizes,@item.Product.Colors</a></span>
                                            <p>@item.Quantity*@item.Product.ProductPrice</p>
                                        </div>
                                    </div>
                                }
                            }
                        }
                        <div class="shipping-total-bill">
                            <div class="cart-prices">
                                <span class="shipping-cost">$2.00</span>
                                <span>Shipping</span>
                            </div>
                            <div class="total-shipping-prices">
