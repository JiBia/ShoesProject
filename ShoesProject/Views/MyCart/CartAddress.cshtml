@section scripts{
    <script>
        $(function sumcart() {
            var tr = $("#total-price").parents("tr");
            $.ajax({
                type: "GET",
                url: "@Url.Action("SumPriceCart", "MyCart")",
                success: function (rps) {
                    tr.find("#total-price").text(rps)
                }
            })
        })
        $(function () {
            sumcart();
        })
    </script>
}