@section Scripts{
<script>
    var dataImgs = new Array(); 
    $(document).ready(function () {
        $('#fine-uploader-manual-trigger').fineUploader({
            template: 'qq-template-manual-trigger',
            autoUpload: false,
            request: {
                endpoint: '@Url.Action("CreateProductImages", "Products")'
            },
            deleteFile: {
                enabled: true
            }
        });        
        $.when($.ajax({
            url: '@Url.Action("GetProductImages", "Products")',
            data: {
                ProductId: @Model.ProductId,
            }
        })).then(function (imgs) {
            imgs.forEach(function (img, index) {
                $('#fine-uploader-manual-trigger').fineUploader('addInitialFiles', [{
                    id: index,
                    name: img.Image,
                    uuid: img.ProductImageId,
                    thumbnailUrl: '@Url.Content("~/Admin/Content/ProductImages/" + Model.ProductId + "/")' + img.Image
                }]);
            })
        });      
        console.log(dataImgs);
    })
</script>    
}