@model TungTT25.Model.Size
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Form Layout</h4>

                </div>
                <div class="panel-body">
                    <h3>Size Forms</h3>
                    <br>                   
                    <form class="form-horizontal" method="post" action="~/Admin/Sizes/Edit">
                        @Html.HiddenFor(model => model.SizeId)
                        <div class="form-group">
                            <label for="SizeValue" class="col-sm-3 control-label">Size Name</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.SizeValue, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="checkbox" class="col-sm-3 control-label">Status</label>
                            <div class="col-sm-6">
                                <div class="checkbox block"><label>@Html.CheckBox("SizeStatus", Model.SizeStatus.HasValue ? Model.SizeStatus : false)</label></div>
                            </div>
                        </div>
                        <div class="btn-toolbar form-group" style="text-align:center">
                            <button class="btn-primary btn">Edit</button>
                            <button class="btn-default btn">Cancel</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

