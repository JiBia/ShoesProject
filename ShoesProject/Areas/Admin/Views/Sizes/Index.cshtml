@model IEnumerable<ShoesProjectModels.Model.Size>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Size</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-sky">
                <div class="panel-heading">
                    <h4>Data Tables</h4>
                    <div class="options">
                        <a href="javascript:;"><i class="fa fa-cog"></i></a>
                        <a href="javascript:;"><i class="fa fa-wrench"></i></a>
                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SizeValue)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SizeStatus)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                           {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.SizeValue)
                                </td>
                                <td>
                                    @if (item.SizeStatus ?? false)
                                    {
                                        <p>Enable</p>
                                    }
                                    else
                                    {
                                        <p>Disable</p>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SizeId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.SizeId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SizeId })
                                </td>
                            </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div> <!-- container -->


